+bool FlatpakSandbox::SpawnOptions::ExposePathRo(base::FilePath path) {
+  base::ScopedFD fd(
+      HANDLE_EINTR(open(path.value().c_str(), O_PATH | O_NOFOLLOW)));
+  if (!fd.is_valid()) {
+    PLOG(ERROR) << "Failed to expose path " << path;
+    return false;
+  }
+
+  sandbox_expose_ro.push_back(std::move(fd));
+  return true;
+}
